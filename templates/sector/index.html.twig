{% extends 'base.html.twig' %}

{% block title %}Sector index{% endblock %}

{% block body %}
    <h1>Sectores</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for sector in sectors %}
            <tr>
                <td>{{ sector.id }}</td>
                <td>{{ sector.nombre }}</td>
                <td style="vertical-align: middle;" class="row">
                    <a class="btn btn-primary btn-sm" href="{{ path('sector_edit', {'id': sector.id}) }}">Modificar</a>
                    {{ include('sector/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('sector_new') }}">AÃ±adir Sector</a>
{% endblock %}
